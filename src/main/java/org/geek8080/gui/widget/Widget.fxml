<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<AnchorPane fx:id="rootPane" stylesheets="@../style/mainStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.geek8080.gui.widget.WidgetController">
   <children>
      <VBox AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label styleClass="main-title" text="COVID-19 Information ">
               <font>
                  <Font name="Segoe UI" size="32.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <FontIcon iconColor="WHITE" iconLiteral="fa-globe">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </FontIcon>
                  <Text fx:id="globalReportText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="content-text" text="Cases: {num} | Recovered: {num} | Deaths: {num}" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="28.0" spacing="20.0">
               <children>
                  <Text fx:id="countryCodeText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="country-title" text="IN" />
                  <Text fx:id="countryReportText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="content-text" text="Cases: {num} | Recovered: {num} | Deaths: {num}" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
